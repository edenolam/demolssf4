{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h5>{{ app.user.username }}</h5>
            </div>
            <div class="card-body">
                <h5 class="card-title">{{ app.user.email }}</h5>
                {% for role in app.user.roles %}
                    <span class="badge badge-primary">{{ role }}</span>
                {% endfor %}
                {% if is_granted('ROLE_EDITOR') %}
                    <p class="card-text">{{ app.user.articles | length }} {{ app.user.articles | length > 1 ? "articles" : "article" }}</p>
                {% endif %}
                <a href="{{ path('admin_userEdit', {'id' : app.user.id}) }}" class="btn btn-primary">modifer</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block title %}

{% endblock %}

